@model WebSiteBanHang.Models.LoaiSanPham

@{
    ViewBag.Title = "Xóa Loại Sản Phẩm";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <h3 style="padding-left:1rem" class="box-title">
                Xóa Loại Sản Phẩm
            </h3>
            <div class="box-header">
                <h3 class="box-title">
                    Bạn có Chắc muốn xóa loại sản phẩm này ?
                </h3>
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TenLoai)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenLoai)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Icon)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Icon)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.BiDanh)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.BiDanh)
                        </dd>

                    </dl>
                </div>
                <div class="box-footer clearfix">
                    @using (Html.BeginForm("Delete", "LoaiSanPhams", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


