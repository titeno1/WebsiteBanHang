@using WebSiteBanHang.Models
@model IEnumerable<SanPham>


    <table class="table table-hover">

        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Sản Phẩm</th>
                <th>Hình Ảnh</th>
                <th>Số Lượng Tồn</th>
                <th>SỐ Lần Mua</th>
                <th>Đơn Giá</th>
                <th>Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(n => n.MaSP))
            {
                <tr class="Search">
                    <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td><img src="@Url.Content("../../../Content/images/ImagesSanPham/" + item.HinhAnh)" class="img-responsive" style="width:50px;height:65px;" /></td>
                    <td>@item.SoLuongTon</td>
                    <td>@item.SoLanMua</td>
                    <td>@item.DonGia.Value.ToString("#,##") VNĐ</td>
                    <td>
                        <a href="@Url.Action("NhapHangDon","QuanLyPhieuNhap",new{@id = item.MaSP})" class="btn btn-success">
                            <i class="fa fa-edit"></i>
                            Nhập Hàng
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>


